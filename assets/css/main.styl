//==============================================================
//   IMPORTS / INDIVIDUAL COMPONENTS AND PAGES
//==============================================================

// http://meyerweb.com/eric/tools/css/reset/ 
@import 'reset';

// nib - http://visionmedia.github.io/nib/
@import 'nib';

// sprites - generated by the 'sprites' gulp task in gulpfile.js
@import 'sprites';

// variables
@import 'variables';

// extension classes
@import 'extends';

// animations
@import 'animations';

// headers and paragraph
@import 'headers';

// buttons
@import 'buttons';

// grid
@import 'grid';

//==============================================================
//   DEFINE SITEWIDE/SHARED STYLES BELOW
//==============================================================

*, *:before, *:after {
  font-family: $font-family;
  box-sizing: border-box;
  border-radius: 0;
  font-size: 16px;
  font-size: 1rem;
}

html {
  font-family: $font-family;
  font-size: 62.5%; /* 10px browser default */
}

p {
  margin: 1rem 0;
  line-height: 1.6;
}

.center {
  text-align: center;
}

