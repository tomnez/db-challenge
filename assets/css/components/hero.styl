//==============================================================
//   HERO AREA / PAGE TOP
//==============================================================

#heroArea {
  background: $db-blue;
  padding: 11.9rem 0 16rem 0;
  color: $white;
  overflow: hidden;

  .animation-intro {
    background: url('img/dropbox-for-business-files.png') repeat-x center;
    background-size: 1050px 696px; // non-retina size
    position: absolute;
    top: 100%;
    opacity: 0;
    width: 100%;
    height: 100%;
    min-height: 100%;

    &.animate {
      // name, duration, delay, iterations, fill-mode.
      animation: HERO-INTRO 1.5s .5s 1 forwards;
    }
  }

  .headline {
    @extend .font-regular;
  }

  .try-it-free { margin: $spacing 0; }
  .or { color: #8ac7e7; }
  .buy-it { color: $white; }
}

//==============================================================
//   ANIMATIONS
//==============================================================

@keyframes HERO-INTRO {
  0% {
    opacity: 0;
    top: 100%;
  }

  100% {
    opacity: 1;
    top: 0;
  }
}

//==============================================================
//   MEDIA QUERIES: RETINA
//==============================================================

@media 
(-webkit-min-device-pixel-ratio: 2), 
(min-resolution: 192dppx) {

  .animation-intro {
    background-image: url('img/dropbox-for-business-files@2x.png');
  }

}

