//==============================================================
//   NAVIGATION
//==============================================================

#siteNav {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;

  .logo {
    margin: 5rem 0 2.5rem;
    sprite('white_dropbox_glyph-2x');
  }

  li {
    margin: 1.5rem 0;
    a {
      color: $white;
      text-decoration: none;

      &.active {
        @extend .font-bold;
      }
    }
  }
}

.menu-container {
  display: none;
  pointer-events: none;
  position: absolute;
  left: 1rem;
  top: 1rem;
  z-index: 10;
  font-size: 1.6rem;
  
  .menu-label {
    @extend .font-bold;
    position: absolute;
    top: .2rem;
    left: 3.5rem;
  }
}

//==============================================================
//   ANIMATIONS
//==============================================================

.site-wrap {
  transition: transform .3s ease-in-out;
  transform: translate3d(0, 0, 0);
  &.opened { transform: translate3d(250px, 0, 0); }
}
