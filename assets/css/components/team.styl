//==============================================================
//   HERO AREA / PAGE TOP
//==============================================================

#doForTeam {
  padding: 7rem 0;
  background: $white;

  // nav arrows
  .arrow {
    padding-top: 17rem;
    .icn-arrow-left {
      sprite('arrow-left-2x');
    }
    .icn-arrow-right {
      sprite('arrow-right-2x');
    }
  }

  // images
  .gallery {
    margin: 4rem 0 8rem;

    [class^="gallery"] {
      display: inline-block;
      width: 100%;
      height: 100%;
      background-size: cover;
    }

    .gallery1-img {
      background-image: url('img/gallery1.jpg');
    }
    .gallery2-img {
      background-image: url('img/gallery2.jpg');
    }
    .gallery3-img {
      background-image: url('img/gallery3.jpg');
    }
  }

  .team-description {
    @extend .open-large-grey;
    margin-bottom: 2rem;
  }
}
